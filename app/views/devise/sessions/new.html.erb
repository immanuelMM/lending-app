<div class="wrapper fadeInDown">
  <div id="formContent">
    <h2>Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.text_field :email, autofocus: true,class:"fadeIn second",id:"login", autocomplete: "email"  %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password,class:"fadeIn third", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>
        <div id="formFooter">
          <%= render "devise/shared/links" %>
       </div>
    </div>
</div>
